<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.mickeymouse.caxi.activity.ShareRequest">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbarStyle="insideOverlay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/share_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/user"
                android:text="@string/loading"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.102"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="RtlHardcoded"
                android:drawableLeft="@drawable/user"
                android:layout_marginStart="24dp" />

            <TextView
                android:id="@+id/share_pickup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="24dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/pickup_drop"
                android:text="@string/loading"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_username"
                tools:ignore="RtlHardcoded"
                android:drawableLeft="@drawable/pickup_drop"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/share_drop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="23dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/pickup_drop"
                android:text="@string/loading"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_pickup"
                tools:ignore="RtlHardcoded"
                android:drawableLeft="@drawable/pickup_drop"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/share_cartype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="24dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/car"
                android:text="@string/loading"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.102"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_drop"
                tools:ignore="RtlHardcoded"
                android:drawableLeft="@drawable/car"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/share_day"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="24dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_date_range_black_24dp"
                android:text="@string/loading"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.103"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_cartype"
                tools:ignore="RtlHardcoded"
                android:drawableLeft="@drawable/ic_date_range_black_24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/share_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="23dp"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/pickuptime"
                android:text="@string/loading"
                android:textSize="18sp"
                app:layout_constraintHorizontal_bias="0.103"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_day"
                tools:ignore="RtlHardcoded"
                android:drawableLeft="@drawable/pickuptime"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/share_req_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="32dp"
                android:background="@android:color/background_light"

                android:text="@string/share_req"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/share_time"
                android:layout_marginRight="24dp" />

        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
